{
	"manifest_version": 2,

	"name": "EasySmartView",
	"version": "0.1.0",
	"description": "Simplify SmartView Creation",

    "background": {
        "scripts": [
            "jquery-3.1.1.min.js",
            "background.js"
        ]
    },

	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "index.html",
        "default_title": "Smart View Student Selector"
    },

    "permissions": [
        "tabs", 
        "activeTab", 
        "storage", 
        "https://campus.fsu.edu/webapps/gradebook/do/instructor/addModifyCustomViews/*"
    ],

    "content_scripts": [{
        "matches": [
            "https://campus.fsu.edu/webapps/gradebook/do/instructor/addModifyCustomViews/*"
        ],
        "js": [
            "jquery-3.1.1.min.js",
            "content.js"
        ],
        "runs_at": "document_end"
    }]
}
