{
	"manifest_version": 2,

	"name": "EasySmartView",
	"version": "0.1.0",
	"description": "Simplify SmartView Creation",

    "background": {
        "scripts": [
            "js/libs/jquery-3.1.1.min.js",
            "js/background.js"
        ]
    },

	"browser_action": {
		"default_icon": "images/icon_128.png",
		"default_popup": "index.html",
        "default_title": "Smart View Student Selector"
    },

    "permissions": [
        "tabs", 
        "activeTab", 
        "storage", 
        "*://campus.fsu.edu/webapps/gradebook/do/instructor/addModifyCustomViews/*",
        "*://extractpdf.com/*",
        "<all_urls>"
    ],

    "content_scripts": [{
        "matches": [
            "*://campus.fsu.edu/webapps/gradebook/do/instructor/addModifyCustomViews/*",
            "*://extractpdf.com/*",
            "<all_urls>"
        ],
        "js": [
            "js/libs/jquery-3.1.1.min.js",
            "js/content.js"
        ],
        "runs_at": "document_end"
    }]
}
